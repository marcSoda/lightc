// basic shadowing
fn foo(a: int) -> int {
    let b: int = 1
    {
        let b: bool = false
    }
    b
}
#test_delim#

// nested shadowing
fn foo(a: int) -> int {
    let b: int = 1
    {
        let b: bool = false
        let a: float = {
            let b: float = 1.0
            b
        }
    }
    b
}
#test_delim#

// delete scope
fn foo(a: int) -> int {
    let b: int = 1
    {
        let c: int = 2
    }
    c
}
#test_delim#

// for scope
let x: float = 1.0
for x: int = 1; x < 10; 1 {
    x
}
x
#test_delim#

// if scope
let x: float = 1.0
if x < 2.0 {
    let y: int = 2
    x
}
y
#test_delim#

// if else scope
let x: float = 1.0
if x < 2.0 {
    let y: int = 2
    x
} else {
    -y
}
#test_delim#
